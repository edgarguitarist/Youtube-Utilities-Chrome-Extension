{
  "manifest_version": 3,
  "name": "YouTube Utilities",
  "description": "Agrega utilidades y funcionalidades que YouTube deber√≠a tener",
  "version": "1.1.1",
  "icons": {
    "128": "images/128.png",
    "256": "images/256.png",
    "512": "images/512.png"
  },
  "background": {
    "service_worker": "background.js"
  },  
  "permissions": ["activeTab", "scripting", "storage", "webNavigation"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["features.js", "load.js"]
    }
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}
